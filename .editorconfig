# Universal config for text editors
# https://EditorConfig.org

# top-most EditorConfig file
# Set to true to stop .editorconfig files search on current file.
root = true

[*]
insert_final_newline = true
charset = utf-8

[Makefile]
indent_style = tab

[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

[{*.yml,*.yaml}]
indent_style = space
indent_size = 2
max_line_length = 120

[*.sh]
end_of_line = lf

[*.md]
max_line_length = 100

[*.html]
indent_style = tab
indent_size = 4

[*.css]
indent_style = tab
indent_size = 4
